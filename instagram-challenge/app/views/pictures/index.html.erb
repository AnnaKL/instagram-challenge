<h1> Instafun </h1>
<% if @pictures.any? %>
  <% @pictures.all.each do |picture| %>
  <%= picture.user.email %><br>
  <%= image_tag picture.image.url, {:width => "500", :height => "500"}%><br>
  <%= picture.description%><br>
   <%= link_to "Edit description", edit_picture_path(picture) %></br>
  <%= link_to "Delete picture", picture_path(picture), method: :delete %></br>
  <% end%>
<% else %>
  <h1>No pictures added yet</h1>
<% end %>
<a href='/pictures/new'> Add a picture</a>